<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/newplayers/#{@newplayer.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <% @newplayer.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>画像</p>
          <input name="image" type="file"> 
          <textarea name="content"><%= @newplayer.content %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>